{
  "name": "single-page-markdown-website",
  "version": "0.0.14",
  "description": "Create a nice single-page documentation website from one or more Markdown files",
  "keywords": [
    "docs",
    "documentation",
    "html",
    "markdown",
    "page",
    "static",
    "static-site-generator"
  ],
  "author": "Yuan Qing Lim",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git://github.com/yuanqing/single-page-markdown-website.git",
    "directory": "packages/single-page-markdown-website"
  },
  "files": [
    "lib"
  ],
  "bin": {
    "single-page-markdown-website": "lib/cli.js"
  },
  "scripts": {
    "build": "yarn run clean && tsc",
    "clean": "rm -rf '*.log' .nyc_output coverage lib",
    "fix": "eslint --fix 'src/**/*.ts'",
    "lint": "eslint 'src/**/*.ts'",
    "prepublishOnly": "yarn run build && cp ../../README.md ./",
    "watch": "yarn run clean && chokidar --command 'cd ../.. && ts-node --project tsconfig.shared.json packages/single-page-markdown-website/src/cli.ts README.md' --initial --silent '../../package.json' '../../README.md' '../frontend/lib/**/*' '../../media/**/*' 'src/**/*.ts'"
  },
  "dependencies": {
    "@single-page-markdown-website/frontend": "^0.0.14",
    "@yuanqing/cli": "^0.0.9",
    "chokidar": "^3.5.1",
    "fs-extra": "^9.1.0",
    "globby": "^11.0.3",
    "html-minifier": "^4.0.0",
    "is-url": "^1.2.4",
    "kleur": "^4.1.4",
    "lodash.template": "^4.5.0",
    "mdast-util-from-markdown": "^0.8.5",
    "mdast-util-toc": "^5.1.0",
    "open": "^8.0.6",
    "rehype-autolink-headings": "^5.0.1",
    "rehype-highlight": "^4.1.0",
    "rehype-slug": "^4.0.1",
    "rehype-stringify": "^8.0.0",
    "remark-emoji": "^2.2.0",
    "remark-gfm": "^1.0.0",
    "remark-parse": "^9.0.0",
    "remark-rehype": "^8.1.0",
    "remark-stringify": "^9.0.1",
    "remark-strip-badges": "^5.0.0",
    "unified": "^9.2.1",
    "unist-util-visit": "^2.0.3",
    "vfile": "^4.2.1"
  },
  "devDependencies": {
    "@types/fs-extra": "^9.0.11",
    "@types/html-minifier": "^4.0.0",
    "@types/lodash.template": "^4.5.0",
    "@types/node": "^14.14.41",
    "@types/unist": "^2.0.3",
    "chokidar-cli": "^2.1.0",
    "eslint": "^7.24.0",
    "eslint-config-yuanqing": "^0.0.4",
    "prettier": "^2.2.1",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4"
  },
  "eslintConfig": {
    "extends": "eslint-config-yuanqing"
  },
  "prettier": "eslint-config-yuanqing/prettier"
}
