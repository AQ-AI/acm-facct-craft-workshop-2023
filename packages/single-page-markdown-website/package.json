{
  "name": "single-page-markdown-website",
  "version": "0.0.3",
  "description": "Create a single-page website from one or more Markdown files",
  "keywords": [
    "docs",
    "documentation",
    "html",
    "markdown",
    "page",
    "static",
    "static-site-generator"
  ],
  "author": "Yuan Qing Lim",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git://github.com/yuanqing/single-page-markdown-website.git",
    "directory": "packages/single-page-markdown-website"
  },
  "files": [
    "lib"
  ],
  "bin": {
    "single-page-markdown-website": "lib/cli.js"
  },
  "scripts": {
    "build": "yarn run clean && tsc",
    "clean": "rimraf '*.log' .nyc_output coverage lib",
    "fix": "eslint --fix 'src/**/*.ts'",
    "lint": "eslint 'src/**/*.ts'",
    "prepublishOnly": "yarn run build && cp ../../README.md README.md",
    "start": "cd sandbox && ts-node ../src/cli.ts docs/index.md",
    "test": "tap 'src/**/__tests__/**/*.ts' --coverage-report html --coverage-report text --jobs-auto --no-browser --reporter terse",
    "watch": "yarn run clean && chokidar --command 'yarn start' --initial --silent '../frontend/lib/**/*' 'src/**/*.ts'"
  },
  "dependencies": {
    "@single-page-markdown-website/frontend": "^0.0.3",
    "@yuanqing/cli": "^0.0.9",
    "chokidar": "^3.4.3",
    "find-up": "^5.0.0",
    "fs-extra": "^9.0.1",
    "globby": "^11.0.1",
    "html-minifier": "^4.0.0",
    "is-url": "^1.2.4",
    "kleur": "^4.1.3",
    "lodash.template": "^4.5.0",
    "mdast-util-from-markdown": "^0.8.4",
    "mdast-util-toc": "^5.1.0",
    "open": "^7.3.0",
    "rehype-autolink-headings": "^5.0.1",
    "rehype-highlight": "^4.0.0",
    "rehype-slug": "^4.0.1",
    "rehype-stringify": "^8.0.0",
    "remark-emoji": "^2.1.0",
    "remark-gfm": "^1.0.0",
    "remark-parse": "^9.0.0",
    "remark-rehype": "^8.0.0",
    "remark-stringify": "^9.0.1",
    "remark-strip-badges": "^5.0.0",
    "unified": "^9.2.0",
    "unist-util-visit": "^2.0.3",
    "vfile": "^4.2.1"
  }
}
