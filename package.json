{
  "private": true,
  "homepage": "https://github.com/yuanqing/single-page-markdown-website",
  "scripts": {
    "build": "lerna run build --scope @single-page-markdown-website/frontend && lerna run build --scope single-page-markdown-website",
    "clean": "lerna run --parallel clean && yarn run website-clean && rimraf '*.log'",
    "docs": "markdown-interpolate README.md",
    "fix": "lerna run --parallel fix",
    "lint": "lerna run --parallel lint",
    "postinstall": "yarn run build",
    "publish": "lerna publish from-package",
    "reset": "yarn run clean && lerna clean --yes && rimraf node_modules yarn.lock && yarn install",
    "test": "lerna run test",
    "version": "lerna version",
    "website-build": "yarn run website-clean && yarn run docs && ts-node --project tsconfig.shared.json packages/single-page-markdown-website/src/cli.ts README.md",
    "website-clean": "rimraf build",
    "website-deploy": "yarn run website-build && gh-pages --dist build"
  },
  "devDependencies": {
    "@types/fs-extra": "^9.0.5",
    "@types/html-minifier": "^4.0.0",
    "@types/lodash.template": "^4.5.0",
    "@types/node": "^14.14.14",
    "@types/tap": "^14.10.1",
    "@types/unist": "^2.0.3",
    "chokidar-cli": "^2.1.0",
    "concurrently": "^5.3.0",
    "cpy-cli": "^3.1.1",
    "eslint": "^7.15.0",
    "eslint-config-yuanqing": "^0.0.4",
    "gh-pages": "^3.1.0",
    "husky": "^4.3.6",
    "lerna": "^3.22.1",
    "lint-staged": "^10.5.3",
    "markdown-interpolate": "^0.0.7",
    "mkdirp": "^1.0.4",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "sass": "^1.30.0",
    "stylelint": "^13.8.0",
    "stylelint-config-yuanqing": "^0.0.1",
    "tap": "^14.11.0",
    "terser-webpack-plugin": "^5.0.3",
    "ts-loader": "^8.0.12",
    "typescript": "^4.1.3",
    "webpack": "^5.11.0",
    "webpack-cli": "^4.2.0"
  },
  "eslintConfig": {
    "extends": "eslint-config-yuanqing"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint"
    ],
    "*.scss": [
      "stylelint"
    ]
  },
  "prettier": "eslint-config-yuanqing/prettier",
  "single-page-markdown-website": {
    "title": "Single-Page Markdown Website",
    "description": "Create a nice single-page website from one or more Markdown files",
    "shareImage": "media/share.png"
  },
  "stylelint": {
    "extends": "stylelint-config-yuanqing"
  },
  "workspaces": [
    "packages/*"
  ]
}
